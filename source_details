CREATE SCHEMA IF NOT EXISTS src_schema;

CREATE TABLE src_schema.src_test_ident (
    policy_id        VARCHAR(20),
    policy_number    VARCHAR(20),
    issue_date        DATE,
    client_id        VARCHAR(20),
    premium_amount   NUMERIC(10,2)   -- extra column (ignored)
);


